{
  "manifest_version": 3,
  "name": "Relay Chat - Domain-Based Communities",
  "version": "1.0.0",
  "description": "Chat with others on any website. Every domain gets its own chat community.",
  "permissions": ["activeTab", "storage", "notifications", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Relay Chat"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
